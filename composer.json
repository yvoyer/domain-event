{
    "name": "star/domain-event",
    "description": "Domain events extension",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer",
            "homepage": "https://github.com/yvoyer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\Component\\DomainEvent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\DomainEvent\\": "tests",
            "Star\\Example\\": "examples"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "beberlei/assert": "^3.3",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "doctrine/dbal": "^3.0",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-phpunit": "*",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "*",
        "symfony/contracts": ">=2.0",
        "symfony/dependency-injection": ">=5.0",
        "symfony/event-dispatcher": ">=5.0"
    },
    "suggest": {
        "symfony/event-dispatcher": "Allows the usage of the SymfonyPublisher adapter provided by the star/domain-event."
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    }
}
