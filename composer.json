{
    "name": "star/domain-event",
    "description": "Domain events extension",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer",
            "homepage": "https://github.com/yvoyer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\Component\\DomainEvent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\DomainEvent\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "symfony/event-dispatcher": "^2.5",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "suggest": {
        "symfony/event-dispatcher": "Allows the usage of the SymfonyPublisher adapter provided by the star/domain-event."
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    }
}
